{
  "name": "webpack.wtf",
  "version": "1.0.0",
  "description": "WTF Webpack moments",
  "author": "Sara Vieira <hey@iamsaravieira.com>",
  "private": true,
  "scripts": {
    "dev": "node build/dev-server.js",
    "start": "node build/dev-server.js",
    "build": "node build/build.js",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js --single-run",
    "test": "run-s build lint unit size",
    "size": "bundlesize",
    "lint": "eslint --ext .js,.vue src test/unit/specs",
    "deploy": "run-s build now",
    "now": "cd dist/ && now"
  },
  "dependencies": {
    "colorable": "^1.0.5",
    "npm-run-all": "^4.1.1",
    "v-toaster": "^1.0.3",
    "vue": "^2.3.3",
    "vue-js-modal": "^1.3.3",
    "vue-router": "^3.0.1"
  },
