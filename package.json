    "webpack-merge": "^4.1.0"
  },
  "alias": "webpack.wtf",
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bundlesize": [
    {
      "path": "./dist/static/js/vendor.*.js",
      "maxSize": "77 kB"
    },
    {
      "path": "./dist/static/js/app.*.js",
      "maxSize": "6 kB"
    }
  ]
}
